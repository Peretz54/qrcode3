@model qrcode3.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <h2>Вход на сайт</h2>

    <!--   <a asp-action="Register" asp-controller="Account">Регистрация</a>   -->

    <form asp-action="Login" asp-controller="Console" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Login">Введите Login</label>
                <p>
                    <input type="text" required asp-for="Login" />
                    <span asp-validation-for="Login" />
                </p>
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <p>
                    <input required asp-for="Password" />
                    <span asp-validation-for="Password" />
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</body>
</html>